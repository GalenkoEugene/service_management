<h1 align = "center">Внесение нового мастера в базу данных</h1>
<div class="row">  
    <div class="container">
      <div class="card card-container">

		<%= form_for(@master, :html => { class: "form-group" }) do |f| %>
			<div class="field">
			  <%= f.text_field :name, class: "form-control", placeholder: "Введите имя мастера" %>
			</div>
		<br>
			<div class="field"> 
			  <%= f.text_field :category, class: "form-control", placeholder: "Введите категорию мастера" %>
			</div>
		<br>
			<div class="actions">
		      <%= f.submit "Добавить мастера", class: "btn btn-lg btn-primary btn-block btn-signin" %>
			</div>
		<% end %>
		<%= link_to 'Вернутся на главную', root_url%>
	  </div><!-- /card-container -->
	</div><!-- /container -->      
</div>